# GraphQL MCP Server Configuration

# Server settings
GRAPHQL_MCP_HOST=localhost
GRAPHQL_MCP_PORT=8080
GRAPHQL_MCP_DEBUG=false

# HTTP client settings
GRAPHQL_MCP_HTTP_TIMEOUT=30
GRAPHQL_MCP_MAX_CONNECTIONS=100

# Cache settings
GRAPHQL_MCP_CACHE_ENABLED=true
GRAPHQL_MCP_CACHE_TYPE=memory
GRAPHQL_MCP_CACHE_TTL=3600
GRAPHQL_MCP_REDIS_URL=redis://localhost:6379
GRAPHQL_MCP_CACHE_SIZE_LIMIT=1000

# Performance settings
GRAPHQL_MCP_MAX_QUERY_DEPTH=10
GRAPHQL_MCP_MAX_QUERY_COMPLEXITY=1000
GRAPHQL_MCP_DEFAULT_PAGE_SIZE=10
GRAPHQL_MCP_MAX_PAGE_SIZE=100

# Security settings
GRAPHQL_MCP_RATE_LIMIT_ENABLED=true
GRAPHQL_MCP_RATE_LIMIT_REQUESTS=100
GRAPHQL_MCP_ALLOWED_ORIGINS=*

# Logging settings
GRAPHQL_MCP_LOG_LEVEL=INFO
GRAPHQL_MCP_LOG_FORMAT=json

# Tool settings
GRAPHQL_MCP_ENABLE_DYNAMIC_TOOLS=true
GRAPHQL_MCP_TOOL_CLEANUP_INTERVAL=3600
GRAPHQL_MCP_MAX_ENDPOINTS=50

# Batch operation settings
GRAPHQL_MCP_MAX_BATCH_SIZE=10
GRAPHQL_MCP_BATCH_TIMEOUT=120
GRAPHQL_MCP_PARALLEL_BATCH_ENABLED=true